# UniFi 컨트롤러 기본 설정
PUID=1000
PGID=1000
TZ=Asia/Seoul
MEM_LIMIT=2048
MEM_STARTUP=1024
UNIFI_HOST=unifi.home.mstorm.net

# UniFi 컨트롤러 IP 설정 (Override Inform Host)
# 호스트의 실제 IP 주소를 지정 (예: 192.168.4.133)
# 이 값을 설정하면 UniFi 컨트롤러가 이 IP를 사용하여 디바이스와 통신합니다
# 주의: 웹 인터페이스에서도 Settings > System > Advanced > Override Inform Host에서 설정 가능
# UNIFI_OVERRIDE_INFORM_HOST=192.168.4.133

# MongoDB 초기화 변수 (MongoDB 공식 이미지가 사용)
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=__REPLACE_ME__
MONGO_INITDB_DATABASE=unifi

# MongoDB 사용자 및 데이터베이스 (초기화 스크립트 및 UniFi 컨트롤러 공통 사용)
MONGO_USER=unifi
MONGO_PASS=__REPLACE_ME__
MONGO_DBNAME=unifi
MONGO_AUTHSOURCE=unifi
